<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminRestaurante">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Columna Izquierda -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Añadir Producto"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"/>

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadircuatroquesos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cuatro Quesos" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadircarbonara"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Carbonara" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadirprosciutto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Prosciutto" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadircuatroestaciones"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cuatro Estaciones" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadirboloñesa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Boloñesa" />


                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadirpesto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pesto" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadirpanne"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Panne de la casa" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadirragu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="RAGU" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadirtiramisu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Tiramisu" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/añadircoppagusto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Coppa GUsto" />


            </LinearLayout>

            <!-- Columna Derecha -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Eliminar Producto"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="20dp"/>

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarcuatroquesos"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cuatro Quesos" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarcarbonara"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Carbonara" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarprosciutto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Prosciutto" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarcuatroestaciones"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Cuatro Estaciones" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarboloñesa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Boloñesa" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarpesto"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Pesto" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarpanne"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Panne de la casa" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarragu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="RAGU" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminartiramisu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Tiramisu" />

                <Button
                    style="?attr/materialButtonOutlinedStyle"
                    app:strokeColor="@color/black"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:id="@+id/eliminarcoppa"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:text="Coppa GUsto" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <Button
        style="?attr/materialButtonOutlinedStyle"
        app:strokeColor="#0000FF"
        android:textColor="#0000FF"
        android:textStyle="bold"
        android:id="@+id/verCarta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:text="Ver Carta" />
</RelativeLayout>
