<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HacerPedidoRestaurante">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <Button
            android:id="@+id/btnMenuReservaPel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Inicio"
            android:layout_marginRight="10dp"
            android:layout_gravity="end|top"/>

        <!-- Selector de productos -->
        <EditText
            android:id="@+id/FechaPeluqueria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:hint="Seleccione la Fecha"
            android:inputType="date"
            android:focusable="false" />

        <!-- Campo de selección de hora -->
        <TimePicker
            android:id="@+id/horaPeluqueria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginTop="50dp"/>

        <!-- Campo de texto para el nombre -->
        <EditText
            android:id="@+id/NombrePeluqueria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:hint="Nombre"/>

        <!-- Botón para hacer el pedido -->
        <Button
            style="?attr/materialButtonOutlinedStyle"
            android:id="@+id/HacerReserva_peluqueria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            app:strokeColor="@color/black"
            android:textColor="@color/black"
            android:layout_gravity="center_horizontal"
            android:text="Hacer reserva"
            android:layout_marginTop="10dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/MisReservasPelIrRes"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cornerRadius="10dp"
            app:strokeColor="#3333FF"
            android:layout_marginTop="10dp"
            android:text="Mis reservas"
            android:textColor="#3333FF" />
    </LinearLayout>

</FrameLayout>
