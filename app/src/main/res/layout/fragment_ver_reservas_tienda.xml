<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ver_reservas_tienda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Selector de productos -->
        <EditText
            android:id="@+id/ver_FechaReservaTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:hint="Seleccione la Fecha"
            android:inputType="date"
            android:focusable="false" />

        <!-- Campo de selección de hora -->
        <TimePicker
            android:id="@+id/ver_horaReservaTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:timePickerMode="spinner"
            android:layout_marginTop="50dp"/>

        <!-- Campo de texto para el nombre -->
        <EditText
            android:id="@+id/ver_NombreReservaPerTienda"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginTop="50dp"
            android:hint="Nombre"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="100dp">

            <!-- Botón Modificar -->
            <Button
                style="?attr/materialButtonOutlinedStyle"
                android:id="@+id/btnModificarResTienda"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Modificar"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:padding="10dp"
                app:cornerRadius="10dp"
                app:strokeColor="@color/black"
                android:layout_marginLeft="15dp"
                />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <!-- Botón Eliminar -->


        </LinearLayout>
    </LinearLayout>

</FrameLayout>