<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ver_pedidos_tienda">

    <Button
        android:id="@+id/btnMenuReservaRes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inicio"
        android:layout_marginRight="10dp"
        android:layout_gravity="end|top"/>
    <!-- Layout para mostrar la lista de pedidos con un RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewPedidosTienda"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:layout_marginTop="50dp"/>

    <!-- BotÃ³n para eliminar -->
    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btn_eliminarPedTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancelar pedido"
        android:textColor="@color/red"
        android:layout_gravity="bottom|center_horizontal"
        app:cornerRadius="10dp"
        android:layout_marginBottom="50dp"
        app:strokeColor="@color/red" />

    <Button
        style="?attr/materialButtonOutlinedStyle"
        android:id="@+id/btn_eliminarPedidoSeleccionadoTienda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        app:strokeColor="@color/red"
        android:text="Eliminar producto Seleccionado"
        android:layout_gravity="bottom|center_horizontal"
        app:cornerRadius="10dp"
        android:layout_marginTop="16dp"/>

</FrameLayout>
